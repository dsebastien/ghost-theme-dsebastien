    "scripts": {
        "dev": "cd src && npx gulp",
        "zip": "cd src && npx gulp zip",
        "test": "cd src && npx gscan .",
        "test:ci": "cd src && npx gscan --fatal --verbose .",
        "pretest": "cd src && npx gulp build",
        "preship": "cd src && npx yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then cd src && npx yarn version && git push --follow-tags; else echo \"Uncomitted changes found.\" && exit 1; fi",
        "postship": "git fetch && cd src && npx gulp release"
    },
