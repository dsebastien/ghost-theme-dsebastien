<footer class="gh-footer gh-outer bg-gray-800 border-t border-gray-400 shadow-[0_-1px_3px_rgba(0,0,0,0.3)]">
    <div class="gh-footer-inner gh-inner py-12 md:py-20 max-w-4xl mx-auto">
        <div class="grid grid-cols-1 gap-12 sm:grid-cols-2 md:grid-cols-3 md:gap-16">
            <!-- About Column -->
            <div class="space-y-8 md:space-y-10 sm:col-span-2 md:col-span-1 text-center md:text-left">
                <span class="gh-footer-logo is-title block">
                    {{#if @site.logo}}
                        <img src="{{@site.logo}}" alt="{{@site.title}}" class="h-12 md:h-16 object-contain mx-auto md:mx-0">
                    {{else}}
                        <span class="!text-3xl md:!text-5xl font-bold text-gray-100">{{@site.title}}</span>
                    {{/if}}
                </span>
                <p class="!text-lg md:!text-2xl text-gray-200 font-medium max-w-md mx-auto md:mx-0">{{@site.description}}</p>
                <div class="flex items-center justify-center md:justify-start pt-4 gap-8 md:gap-10">
                    <a href="https://x.com/@dsebastien" 
                       class="!text-white hover:!text-gray-200">
                        {{> "icons/x"}}
                        <span class="sr-only">X</span>
                    </a>
                    <a href="https://www.youtube.com/@dsebastien" 
                       class="!text-red-500">
                        {{> "icons/youtube"}}
                        <span class="sr-only">YouTube</span>
                    </a>
                    <a href="https://bsky.app/profile/dsebastien.net" 
                       class="!text-white hover:!text-blue-400">
                        {{> "icons/bluesky"}}
                        <span class="sr-only">Bluesky</span>
                    </a>
                    <a href="https://www.linkedin.com/in/sebastiend" 
                       class="!text-white hover:!text-blue-400">
                        {{> "icons/linkedin"}}
                        <span class="sr-only">LinkedIn</span>
                    </a>
                    <a href="https://github.com/dsebastien" 
                       class="!text-white hover:!text-gray-200">
                        {{> "icons/github"}}
                        <span class="sr-only">GitHub</span>
                    </a>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="mt-0 text-center md:text-left">
                <h3 class="font-semibold !text-xl md:!text-3xl text-gray-100 mb-3 md:mb-5">Quick Links</h3>
                <ul class="space-y-2 md:space-y-3.5">
                    <li><a href="{{@site.url}}" class="!text-lg md:!text-2xl !text-gray-200 hover:text-primary transition-colors duration-200 hover:translate-x-0.5 inline-flex transform justify-center md:justify-start w-full">Home</a></li>
                    <li><a href="/about" class="!text-lg md:!text-2xl !text-gray-200 hover:text-primary transition-colors duration-200 hover:translate-x-0.5 inline-flex transform justify-center md:justify-start w-full">About</a></li>
                    <li><a href="/uses" class="!text-lg md:!text-2xl !text-gray-200 hover:text-primary transition-colors duration-200 hover:translate-x-0.5 inline-flex transform justify-center md:justify-start w-full">Uses</a></li>
                </ul>
            </div>

            <!-- Resources -->
            <div class="mt-0 text-center md:text-left">
                <h3 class="font-semibold !text-xl md:!text-3xl text-gray-100 mb-3 md:mb-5">Resources</h3>
                <ul class="space-y-2 md:space-y-3.5">
                    <li><a href="/start" class="!text-lg md:!text-2xl !text-gray-200 hover:text-primary transition-colors duration-200 hover:translate-x-0.5 inline-flex transform justify-center md:justify-start w-full">Start</a></li>
                    <li><a href="/blog" class="!text-lg md:!text-2xl !text-gray-200 hover:text-primary transition-colors duration-200 hover:translate-x-0.5 inline-flex transform justify-center md:justify-start w-full">Blog</a></li>
                    <li><a href="/newsletter" class="!text-lg md:!text-2xl !text-gray-200 hover:text-primary transition-colors duration-200 hover:translate-x-0.5 inline-flex transform justify-center md:justify-start w-full">Newsletter</a></li>
                </ul>
            </div>
        </div>

        <div class="!mt-12 md:mt-16 pt-6 md:pt-8 border-t border-gray-400">
            <div class="flex flex-col md:flex-row justify-center items-center space-y-4 md:space-y-0">
                <p class="!text-base md:!text-xl text-gray-200">&copy; {{date format="YYYY"}} {{@site.title}}. All rights reserved.</p>
            </div>
        </div>
    </div>
</footer>
