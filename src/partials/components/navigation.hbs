<header id="gh-navigation" class="gh-navigation {{#match @custom.header_and_footer_color "Accent color"}} has-accent-color{{/match}} gh-outer">
    <div class="gh-navigation-inner gh-inner">

        <div class="gh-navigation-brand">
            <a class="gh-navigation-logo is-title" href="{{@site.url}}">
                {{#if @site.logo}}
                    <div class="flex items-center gap-2">
                        <img class="rounded-full !w-16 !h-16 !max-h-16 !max-w-16 object-cover" src="{{@site.logo}}" alt="{{@site.title}}">
                        <span class="hidden xs:block">{{@site.title}}</span>
                    </div>
                {{else}}
                    <div class="flex items-center gap-2">
                        <img class="rounded-full !w-16 !h-16 !max-h-16 !max-w-16 object-cover" src="{{asset "images/developassion-logo.png"}}" alt="{{@site.title}}">
                        <span class="hidden xs:block">{{@site.title}}</span>
                    </div>
                {{/if}}
            </a>
            {{> "search-toggle"}}
            <button class="gh-burger gh-icon-button" aria-label="Menu">
                {{> "icons/burger"}}
                {{> "icons/close"}}
            </button>
        </div>

        <nav class="gh-navigation-menu">
            {{navigation}}
            {{#unless @site.members_enabled}}
                {{> "search-toggle"}}
            {{/unless}}
        </nav>

        <div class="gh-navigation-actions">
            {{#unless @site.members_enabled}}
                {{> "search-toggle"}}
            {{else}}
                {{> "search-toggle"}}
                <div class="gh-navigation-members">
                    {{#unless @member}}
                        {{#unless @site.members_invite_only}}
                            <a href="#/portal/signin" data-portal="signin">Sign in</a>
                            {{#unless hideSubscribeButton}}
                                <a class="gh-button" href="#/portal/signup" data-portal="signup">Subscribe</a>
                            {{/unless}}
                        {{else}}
                            <a class="gh-button" href="#/portal/signin" data-portal="signin">Sign in</a>
                        {{/unless}}
                    {{else}}
                        <a class="gh-button" href="#/portal/account" data-portal="account">Account</a>
                    {{/unless}}
                </div>
            {{/unless}}
        </div>

    </div>
</header>
