            {{#get "posts" filter="tag:blog" include="tags" limit="100" page="1" order="published_at desc"}}
                {{#foreach posts}}
                    <li class="border-b border-gray-200 py-8">
                        <article>
                            <h2 class="text-2xl font-semibold !mb-2">
                                <a href="{{url}}" class="capitalize">{{title}}</a>
                            </h2>
                            
                            {{#if excerpt}}
                                <p class="text-gray-600">{{excerpt}}</p>
                            {{/if}}
                            
                            <div class="!mt-8 text-md text-gray-500">
                                <div>
                                    <time datetime="{{date format="YYYY-MM-DD"}}">
                                        {{date format="MMMM DD, YYYY"}}
                                    </time>
                                </div>

                                {{#if tags}}
                                    <div class="mt-2">    
                                        <span>Tags:&nbsp;</span>
                                        {{#foreach tags}}
                                            <a href="{{url}}" class="hover:text-primary transition-colors capitalize">{{name}}</a>{{#unless @last}},&nbsp;{{/unless}}
                                        {{/foreach}}
                                    </div>
                                {{/if}}
                            </div>
