{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

<main class="gh-main gh-outer blog">
        <section class="gh-archive gh-inner">
            <div class="gh-archive-inner">
                <header class="gh-archive-wrapper">
                    <h1 class="gh-article-title is-title">Articles</h1>
                    <p class="gh-article-excerpt">Explore my articles about
                        <a class="top-link" href="#personal-knowledge-management">Personal Knowledge Management</a>, 
                        <a class="top-link" href="#obsidian">Obsidian</a>, 
                        <a class="top-link" href="#knowledge-work">Knowledge Work</a>, 
                        <a class="top-link" href="#productivity">Productivity</a>, 
                        and <a class="top-link" href="#personal-organization">Personal Organization</a>.</p>
                </header>
            </div>
        </section>
        <section class="gh-container is-grid has-sidebar gh-outer">
            <div class="gh-container-inner gh-inner">
                <main class="gh-main">
                    <!-- Recent -->
                    <h2 class="!mb-8 text-4xl font-bold">Recent</h2>
                    <div class="gh-feed mt-4">
                        {{#get "posts" filter="tag:blog" limit=6 as |recent|}}
                            {{#foreach recent}}
                                {{> "post-card"}}
                            {{/foreach}}
                        {{/get}}

                        <div class="">
                            <a href="/tag/blog">See More {{> "icons/arrow"}}</a>
                            <hr class="!my-8"/>
                        </div>
                    </div>

                    <!-- Personal Knowledge Management -->
                    <h2 class="!mt-16 !mb-8 text-4xl font-bold">Personal Knowledge Management</h2>
                    <div id="personal-knowledge-management" class="gh-feed mt-4">
                        {{#get "posts" filter="tag:personal-knowledge-management" limit=6 as |recent|}}
                            {{#foreach recent}}
                                {{> "post-card"}}
                            {{/foreach}}
                        {{/get}}
                        
                        <div class="">
                            <a href="/tag/personal-knowledge-management">See More {{> "icons/arrow"}}</a>
                            <hr class="!my-8"/>
                        </div>
                    </div>

                    <!-- Obsidian -->
                    <h2 class="!mt-16 !mb-8 text-4xl font-bold">Obsidian</h2>
                    <div id="obsidian" class="gh-feed mt-4">
                        {{#get "posts" filter="tag:obsidian" limit=6 as |recent|}}
                            {{#foreach recent}}
                                {{> "post-card"}}
                            {{/foreach}}
                        {{/get}}
                        
                        <div class="">
                            <a href="/tag/obsidian">See More {{> "icons/arrow"}}</a>
                            <hr class="!my-8"/>
                        </div>
                    </div>

                    <!-- Knowledge Work -->
                    <h2 class="!mt-16 !mb-8 text-4xl font-bold">Knowledge Work</h2>
                    <div id="knowledge-work" class="gh-feed mt-4">
                        {{#get "posts" filter="tag:knowledge-work" limit=6 as |recent|}}
                            {{#foreach recent}}
                                {{> "post-card"}}
                            {{/foreach}}
                        {{/get}}

                        <div class="">
                            <a href="/tag/knowledge-work">See More {{> "icons/arrow"}}</a>
                            <hr class="!my-8"/>
                        </div>
                    </div>

                    <!-- Productivity -->
                    <h2 class="!mt-16 !mb-8 text-4xl font-bold">Productivity</h2>
                    <div id="productivity" class="gh-feed mt-4">
                        {{#get "posts" filter="tag:productivity" limit=6 as |recent|}}
                            {{#foreach recent}}
                                {{> "post-card"}}
                            {{/foreach}}
                        {{/get}}

                        <div class="">
                            <a href="/tag/productivity">See More {{> "icons/arrow"}}</a>
                            <hr class="!my-8"/>
                        </div>
                    </div>

                    <!-- Personal Organization -->
                    <h2 class="!mt-16 !mb-8 text-4xl font-bold">Personal Organization</h2>
                    <div id="personal-organization" class="gh-feed mt-4">
                        {{#get "posts" filter="tag:personal-organization" limit=6 as |recent|}}
                            {{#foreach recent}}
                                {{> "post-card"}}
                            {{/foreach}}
                        {{/get}}

                        <div class="">
                            <a href="/tag/personal-organization">See More {{> "icons/arrow"}}</a>
                            <hr class="!my-8"/>
                        </div>
                    </div>
                </main>
                <aside class="gh-sidebar">
                    <div class="gh-sidebar-inner">
                        <section class="gh-about">
                            {{#if @site.icon}}
                                <img class="gh-about-icon" src="{{@site.icon}}" alt="{{@site.title}}" loading="lazy">
                            {{/if}}
                            <h3 class="gh-about-title is-title">{{@site.title}}</h3>
                            {{#if @site.description}}
                                <p class="gh-about-description is-body">{{@site.description}}</p>
                            {{/if}}
                                {{#if @site.members_enabled}}
                                    {{#unless @member}}
                                        <button class="gh-button" data-portal="signup">Subscribe</button>
                                    {{else}}
                                        {{#if @site.paid_members_enabled}}
                                            {{#unless @member.paid}}
                                                <button class="gh-button" data-portal="upgrade">Upgrade</button>
                                            {{/unless}}
                                        {{/if}}
                                {{/unless}}
                            {{/if}}
                        </section>

                        <!-- Featured -->
                        <section class="gh-recommendations">
                            <h4 class="gh-sidebar-title">Featured</h4>
                            <ul class="!list-none">
                                {{#get "posts" filter="featured:true" limit=10}}
                                    {{#foreach posts}}
                                        <li>âž¤&nbsp;<a href="{{url}}">
                                            {{title}}
                                        </a></li>
                                    {{/foreach}}
                                {{/get}}
                            </ul>
                        </section>

                        <!-- Recommendations -->
                        {{#if @site.recommendations_enabled}}
                            <section class="gh-recommendations">
                                <h4 class="gh-sidebar-title">Recommendations</h4>
                                {{recommendations}}
                                <button data-portal="recommendations">See More {{> "icons/arrow"}}</button>
                            </section>
                        {{/if}}
                    </div>
                </aside>
            </div>
        </section>
    </article>
</main>