{{!-- Generic script to replace specific links with custom URLs --}}
<script>
    /**
     * Replace all links matching a specific URL with a new URL
     * @param {string} sourceUrl - The URL to search for and replace
     * @param {string} targetUrl - The URL to replace it with
     */
    function replaceLinkUrl(sourceUrl, targetUrl) {
        // Find all links that match the source URL (including with query params/hash)
        var links = document.querySelectorAll('a');

        links.forEach(function(link) {
            // Check if the link starts with the source URL
            if (link.href === sourceUrl || link.href.startsWith(sourceUrl + '?') || link.href.startsWith(sourceUrl + '#')) {
                // Preserve query parameters and hash fragments
                var suffix = link.href.substring(sourceUrl.length);
                link.href = targetUrl + suffix;
            }
        });
    }

